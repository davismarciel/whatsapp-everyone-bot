# Configurações da Evolution API
SERVER_TYPE=http  # Tipo de servidor utilizado (HTTP)
SERVER_PORT=8080  # Porta onde o servidor será iniciado
SERVER_URL=http://api:8080  # URL base da API

# Configurações de autenticação
AUTHENTICATION_API_KEY=your_api_key_here  # Chave de autenticação da API
AUTHENTICATION_EXPOSE_IN_FETCH_INSTANCES=true  # Se deve expor autenticação em chamadas Fetch
LANGUAGE=en  # Idioma padrão da API
RESEND_FAILED=false  # Define se mensagens falhas devem ser reenviadas

# Configurações do banco de dados
DATABASE_ENABLED=true  # Habilita ou desabilita a conexão com o banco de dados
DATABASE_PROVIDER=postgresql  # Tipo de banco de dados utilizado (PostgreSQL)
DATABASE_CONNECTION_URI=postgresql://your_user:your_password@your_host:5432/evolution?schema=public  
# URI de conexão com o banco de dados PostgreSQL

DATABASE_CONNECTION_CLIENT_NAME=evolution_exchange  # Nome do cliente de conexão com o banco

# Configurações de salvamento de dados no banco
DATABASE_SAVE_DATA_INSTANCE=true  # Salvar instâncias de dados
DATABASE_SAVE_DATA_NEW_MESSAGE=true  # Salvar novas mensagens recebidas
DATABASE_SAVE_MESSAGE_UPDATE=true  # Salvar atualizações de mensagens
DATABASE_SAVE_DATA_CONTACTS=true  # Salvar informações de contatos
DATABASE_SAVE_DATA_CHATS=true  # Salvar histórico de chats
DATABASE_SAVE_DATA_LABELS=true  # Salvar rótulos de mensagens
DATABASE_SAVE_DATA_HISTORIC=true  # Salvar histórico geral

# Credenciais do PostgreSQL
POSTGRES_DB=evolution  # Nome do banco de dados
POSTGRES_USER=your_postgres_user  # Usuário do banco de dados
POSTGRES_PASSWORD=your_postgres_password  # Senha do banco de dados
POSTGRES_PORT=5432  # Porta do banco de dados

# Configurações do cache Redis
CACHE_REDIS_ENABLED=false  # Habilita o uso de cache Redis
CACHE_REDIS_URI=redis://your_redis_host:6379/6  # URI de conexão com o Redis
CACHE_REDIS_PREFIX_KEY=evolution  # Prefixo usado para diferenciar dados no Redis
CACHE_REDIS_SAVE_INSTANCES=false  # Define se as instâncias de conexão devem ser armazenadas no Redis

# Configurações de cache local
CACHE_LOCAL_ENABLED=false  # Habilita/desabilita o cache local

# Configurações da sessão
CONFIG_SESSION_PHONE_CLIENT=Evolution API  # Nome do cliente da sessão
CONFIG_SESSION_PHONE_NAME=Chrome  # Nome do navegador utilizado na sessão
CONFIG_SESSION_PHONE_VERSION=2.3000.1015901307  # Versão do navegador

# Configurações de QR Code
QRCODE_LIMIT=30  # Limite de tentativas de geração do QR Code
QRCODE_COLOR='#175197'  # Cor personalizada para o QR Code

# Desabilitar integrações não utilizadas
RABBITMQ_ENABLED=false  # Desabilita integração com RabbitMQ
SQS_ENABLED=false  # Desabilita integração com Amazon SQS
WEBSOCKET_ENABLED=false  # Desabilita WebSocket
PUSHER_ENABLED=false  # Desabilita integração com Pusher
CHATWOOT_ENABLED=false  # Desabilita integração com Chatwoot
OPENAI_ENABLED=false  # Desabilita integração com OpenAI
DIFY_ENABLED=false  # Desabilita integração com Dify
S3_ENABLED=false  # Desabilita integração com armazenamento S3

# Configurações do bot
BOT_NUMBER=your_bot_number@s.whatsapp.net  # Número do bot no WhatsApp

# Configurações de IA e APIs de terceiros
GEMINI_API_KEY=your_gemini_api_key_here  # Chave de API para o serviço Gemini
FOOTBALL_API_TOKEN=your_football_api_token_here  # Chave de API para acessar dados de futebol
